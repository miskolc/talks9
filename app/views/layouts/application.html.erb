<!DOCTYPE html>
<html>
<head>
  <title>TalksApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%- flash.each do |key, msg| -%>
    <div id="<%= key %>">
      <p style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></p>
      <p><%= msg %></p>
      <div class="clear"></div>
    </div>
  <%- end -%>

  <div class="container">
    <a id="back"><%= link_to 'Back', root_path %></a>
    <%= yield %>
  </div>
</body>
</html>
